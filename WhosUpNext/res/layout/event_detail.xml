<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_envet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >
        <TextView
	        android:id="@+id/name_label"
	        android:text="@string/name_label"
	        android:gravity="right" />
	    
		<TextView
	        android:id="@+id/name_value"
	        android:layout_weight="1" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		<TextView
		    
	        android:id="@+id/date_label"
	        android:text="@string/date_label"
	        android:gravity="right" />
	    <TextView
	        android:id="@+id/date_value"
	        android:layout_weight="1" />
	
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		<TextView
	        android:id="@+id/time_label"
	        android:text="@string/time_label"
	        android:gravity="right" />
	  	<TextView
	        android:id="@+id/time_value"
	        android:layout_weight="1" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		<TextView
	        android:id="@+id/sport_label"
	        android:text="@string/sport_label"
	        android:gravity="right" />
	    
	    <TextView
	        android:id="@+id/sport_value"
	        android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		<TextView
	        android:id="@+id/location_label"
	        android:text="@string/location_label"
	        android:gravity="right" />
	    
	    <TextView
	        android:id="@+id/location_value"
	        android:layout_weight="1"/>
	   
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_weight="2" >
		<fragment
	        android:id="@+id/location_map"
		    class="com.google.android.gms.maps.MapFragment"
	        android:layout_weight="1"
            android:layout_column="1"/>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		<TextView
	        android:id="@+id/details_label"
	        android:text="@string/details_label"
	        android:gravity="right" />
	    
	    <TextView
	        android:id="@+id/details_value"
	        android:layout_weight="1"
        	android:singleLine="false" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		<TextView
	        android:id="@+id/host_label"
	        android:text="@string/host_label"
	        android:gravity="right" />
	    
	    <TextView
	        android:id="@+id/host_value"
	        android:layout_weight="1"
        	android:singleLine="false" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip" >
		<TextView
	        android:id="@+id/phone_label"
	        android:text="@string/phone_label"
	        android:gravity="right" />
	    
	    <TextView
	        android:id="@+id/phone_value"
	        android:layout_weight="1"
        	android:singleLine="false" />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
	    android:gravity="center" >
	    <Button
	        android:id="@+id/delete_event"
	        android:text="@string/delete"
	        android:onClick="deleteEvent" />
    </TableRow>
</TableLayout>